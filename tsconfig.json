{
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es2018", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": "src",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "__diff_output__",
    "__snapshots__",
    "**/*.snap.tsx",
    "build",
    "config",
    "node_modules",
    "public",
    "scripts",
    "src-js"
  ],
  "include": [
    "src",
    "custom_modules/react-app-env.d.ts",
    "custom_modules/modules.d.ts",
    "custom_modules/react-file-previewer.d.ts"
  ]
}
